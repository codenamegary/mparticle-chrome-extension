{
    "name": "mParticle Visualizer",
    "description": "Visual notification of events being sent to mParticle during browsing. Useful for QA and debugging of mParticle client events.",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "mParticle Request Inspector",
        "default_icon": {
            "16": "/images/get_started16.png",
            "32": "/images/get_started32.png",
            "48": "/images/get_started48.png",
            "128": "/images/get_started128.png"
        }
    },
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "webRequest",
        "tabs"
    ],
    "host_permissions": [ "*://*/*" ],
    "icons": {
      "16": "/images/get_started16.png",
      "32": "/images/get_started32.png",
      "48": "/images/get_started48.png",
      "128": "/images/get_started128.png"
    }
}